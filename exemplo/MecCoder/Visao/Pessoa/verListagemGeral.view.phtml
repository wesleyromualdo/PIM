<div class="container-fluid">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Lista de pessoas</h5>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-md-2">
                    <select class="form-control js-select-chosen" data-list-page-size-selector=".listagem">
                        <option value="3">3 resultados por página</option>
                        <option value="5" selected="selected">5 resultados por página</option>
                        <option value="10">10 resultados por página</option>
                        <option value="20">20 resultados por página</option>
                        <option value="50">50 resultados por página</option>
                        <option value="100">100 resultados por página</option>
                    </select>
                </div>
                <div class="input-group col-md-offset-9 col-md-3">
                    <span class="input-group-addon"><i class="fa fa-search"></i></span>
                    <input type="text" class="form-control" placeholder="Pesquisa rápida" data-list-search='.listagem' />
                </div>
            </div>
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Telefone</th>
                        <th style="width:10%">Naturalidade</th>
                        <th style="width:10%" class="text-center">Ação</th>
                    </tr>
                </thead>
                <tbody class="templates" style="display:none">
                    <tr class="item-listagem">
                        <td data-html-nome ></td>
                        <td data-html-cpf ></td>
                        <td data-html-telefone ></td>
                        <td data-html-naturalidade ></td>
                        <td data-attr-id='data-id' data-attr-peso='data-nascimento' data-attr-nascimento='data-nascimento' class="text-right">
                            <a class="btn btn-sm btn-primary js-editar" href="?modulo=exemplo/controle/pessoa/ver-edicao&id={id}" data-teste="O nome e o id {nome} {id} " data-replace-id='href|data-teste' data-bla=" ixi olha o cpf {cpf} " data-replace-cpf="data-bla" data-replace-nome="data-teste" ><i class="fa fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger js-excluir" href="?modulo=exemplo/controle/pessoa/excluir&id={id}&cpd={cpf}" data-replace-id='href' data-replace-cpf='href' ><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                </tbody>
                <tbody data-collection='_JS.pessoas' data-tpl-item='.templates .item-listagem' class="listagem" ></tbody>
            </table>
            <div class="row">
                <div class='col-md-12 text-center'>
                    <ul class="pagination" data-list-pagination='.listagem' data-list-data="_JS.pessoas" data-list-page-size="5" ></ul>
                </div>
            </div>
        </div>
    </div>
</div>

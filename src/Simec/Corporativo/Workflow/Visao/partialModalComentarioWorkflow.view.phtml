<div class="tpl-modal-comentario-workflow" style="display:none;">
    <div class="modal-header">
    	<button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
    	<h4 class="modal-title" data-html-acao></h4>
    </div>
    <div class="modal-body">

		<table class="table table-bordered table-condensed">
			<thead>
				<tr>
					<th colspan="2" data-html-docdsc></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td style="text-align: right; font-weight: bold; width: 30%">Estado atual:</td>
					<td width="80%" data-html-estado-atual></td>
				</tr>
				<tr>
					<td style="text-align: right; font-weight: bold; width: 30%">Ação:</td>
					<td data-html-acao></td>
				</tr>
				<tr>
					<td style="text-align: right; font-weight: bold; width: 30%">Comentário:</td>
					<td>
						<div class="notprint">
							<textarea id="comentario_acao_wf" name="comentario_acao_wf" cols="" rows="4" onmouseover="MouseOver( this );" onfocus="MouseClick( this );" onmouseout="MouseOut( this );"
								onblur="MouseBlur( this ); textCounter( document.getElementById('comentario_acao_wf'), document.getElementById('no_comentario_acao_wf'), 6000);" style="width: ex;"
								onkeydown=" textCounter( document.getElementById('comentario_acao_wf'), document.getElementById('no_comentario_acao_wf'), 6000);"
								onkeyup=" textCounter( document.getElementById('comentario_acao_wf'), document.getElementById('no_comentario_acao_wf'), 6000);" class="txareanormal form-control"></textarea>
							<input readonly="" style="text-align: right; border-left: 3px solid rgb(136, 136, 136); color: rgb(128, 128, 128); width: 70px; margin-top: 5px;" type="text" name="no_comentario_acao_wf" id="no_comentario_acao_wf"
								size="6" maxlength="6" value="6000" class="CampoEstilo form-control">
						</div>
					</td>
				</tr>
			</tbody>
		</table>

	</div>
    <div class="modal-footer">
    	<button type="button" class="btn btn-success" data-attr-onclick-tramitar="onclick">
    		<span class="glyphicon glyphicon-ok"></span> Tramitar
    	</button>
    	<button type="button" class="btn btn-danger" data-dismiss="modal">
    		<span class="glyphicon glyphicon-remove"></span> Cancelar
    	</button>
    </div>
</div>
